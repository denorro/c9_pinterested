<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Sign In</h2>
  </div>
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class:"form-control", placeholder:"Email...", autofocus: true, required:"required"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class:"form-control", placeholder:"Password...", autocomplete: "off", required:"required" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %><span>Remember Me?</span>
      <% end %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary" %>
    <button type="reset" class="btn btn-default">Cancel</button>
  </div>
<% end %>
</div>
<br>
<%# render "devise/shared/links" %>
</div>