<% if @pins.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
            <th>Image</th>
            <th>Description</th>
            <th colspan=3></th>
        </tr>
      </thead>
      <tbody>
        <%= content_tag_for(:tr, @pins) do |pin| %>
          <td>
            <%= link_to pin do %>
              <%= image_tag pin.image.url(:medium), alt:"Missing Image" %>
            <% end %>
          </td>
          <td><%= pin.description %></td>
          <td>
            <%= link_to pin do %>
              <i class="glyphicon glyphicon-eye-open"> Show</i>
            <% end %>
          </td>
          <% if pin.user == current_user %>
            <td>
              <%= link_to edit_pin_path(pin) do %>
                <i class="glyphicon glyphicon-edit"> Edit</i>
              <% end %>
            </td>
            <td>
              <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="glyphicon glyphicon-trash"> Delete</i>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="jumbotron">
    <h1>No Pins Exists</h1>
  </div>
<% end %>
  
