<div id="pins" class="transitions-enabled">
<% if @pins.any? %>
      <% @pins.each do |pin| %>
        <div class="box">
          <div class="panel panel-default">
              <%= link_to pin do %>
                <%= image_tag pin.image, alt:"Missing Image", class:"img-responsive" %>
              <% end %>
            <div class="panel-body">
              <%= pin.description.upcase %>
            </div>
            <% if pin.user == current_user %>
              <div class="panel-footer">
                <%= link_to 'Edit', edit_pin_path(pin), class:"btn btn-default" %>
                <%= link_to 'Delete', pin, method: :delete, data:{ confirm: 'Are You Sure?'}, class:"btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
<% else %>
  <div class="jumbotron">
    <h1>No Pins Exists</h1>
  </div>
<% end %>
</div>
<div class="center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
