<div class="page-header">
  <%= link_to pins_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_pin_path(@pin), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show pin</h1>
</div>

<div class="form-group">
  <label class="form-label">Description</label>
  <input type="input" class="form-control" readonly="readonly" value="<%= @pin.description %>" />
  <%# text_field @pin.description, class:"form-control", readonly:"readonly" %>
</div>
