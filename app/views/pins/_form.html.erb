<%= form_for(@pin, html: { multipart: true, }) do |f| %>
    <% if @pin.errors.any? %>
      <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h4>
        <ul>
          <% @pin.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
      <div class="form-group">
        <%= image_tag @pin.image.url(:medium), alt:"No image linked to this post..." %>
      </div>
      
      <div class="form-group">
        <%= f.text_field :description, class: "form-control", placeholder:"Description...", required:"required" %>
      </div>
      
      <div class="form-group">
        <%= f.file_field :image, class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
        <button type="reset" class="btn btn-danger">Cancel</button>
      </div>
      
<% end %>